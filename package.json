{
  "name": "solidxp",
  "version": "0.1.0",
  "type": "module",
  "description": "SolidJS components for Windows XP UI with xp.css styling",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/style.css",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bunx --bun vite",
    "build": "bunx --bun vite build && bunx tsc --emitDeclarationOnly",
    "build:lib": "BUILD_MODE=lib bunx --bun vite build && bunx tsc --project tsconfig.declarations.json",
    "preview": "bunx --bun vite preview",
    "typecheck": "bunx tsc --noEmit",
    "lint": "bunx eslint src/**/*.{ts,tsx}",
    "prepublishOnly": "bun run build:lib"
  },
  "keywords": [
    "solidjs",
    "windows-xp",
    "ui-components",
    "xp.css",
    "typescript",
    "css-framework"
  ],
  "author": "Eduardo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JericoFX/SolidXP.git"
  },
  "homepage": "https://JericoFX.github.io/SolidXP/",
  "dependencies": {
    "xp.css": "^0.2.6",
    "clsx": "^2.1.1"
  },
  "peerDependencies": {
    "solid-js": "^1.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.5",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "solid-js": "^1.9.7",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.18.2",
    "vite": "^7.0.6",
    "vite-plugin-solid": "^2.11.8"
  }
}